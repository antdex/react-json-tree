{
  "compilerOptions": {
    "noEmit": true,
    "pretty": true,
    "target": "es5",
    "module": "es2015",
    "jsx": "react",
    "declaration": true,
    "outDir": "./lib",
    "downlevelIteration": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/*"]
}
